<plugin name='selenium-rc' version='0.1' grailsVersion='1.1 &gt; *'>
  <author>Rob Fletcher</author>
  <authorEmail>rob@energizedwork.com</authorEmail>
  <title>Selenium RC Plugin</title>
  <description>\
Runs Selenium RC tests written in Groovy in the Grails functional test phase.
</description>
  <documentation>http://grails.org/SeleniumRc+Plugin</documentation>
  <resources>
    <resource>BuildConfig</resource>
    <resource>DataSource</resource>
    <resource>SeleniumConfigTemplate</resource>
    <resource>UrlMappings</resource>
  </resources>
  <dependencies>
    <resolvers>
      <resolver type='mavenLocal' />
      <resolver type='mavenCentral' />
      <resolver type='mavenLocal' />
      <resolver type='mavenRepo' root='http://m2repo.spockframework.org/snapshots' name='http://m2repo.spockframework.org/snapshots' m2compatbile='true' />
      <resolver type='mavenRepo' root='http://m2repo.spockframework.org/releases' name='http://m2repo.spockframework.org/releases' m2compatbile='true' />
      <resolver type='mavenRepo' root='http://oss.sonatype.org/content/groups/jetty' name='http://oss.sonatype.org/content/groups/jetty' m2compatbile='true' />
    </resolvers>
    <dependency group='org.seleniumhq.selenium.client-drivers' name='selenium-java-client-driver' version='1.0.1' conf='provided' transitive='true' />
    <dependency group='org.w3c.css' name='sac' version='1.3' conf='runtime' transitive='true' />
    <dependency group='org.gmock' name='gmock' version='0.8.0' conf='test' transitive='true' />
    <dependency group='org.hibernate' name='hibernate-core' version='3.3.1.GA' conf='compile' transitive='true'>
      <excludes group='*' name='ehcache' />
      <excludes group='*' name='xml-apis' />
      <excludes group='*' name='commons-logging' />
    </dependency>
    <dependency group='antlr' name='antlr' version='2.7.6' conf='runtime' transitive='true' />
    <dependency group='javassist' name='javassist' version='3.4.GA' conf='runtime' transitive='true' />
    <dependency group='org.hibernate' name='hibernate-annotations' version='3.4.0.GA' conf='compile' transitive='true' />
    <dependency group='dom4j' name='dom4j' version='1.6.1' conf='runtime' transitive='true'>
      <excludes group='*' name='xml-apis' />
    </dependency>
    <dependency group='org.hibernate' name='hibernate-commons-annotations' version='3.3.0.ga' conf='compile' transitive='true'>
      <excludes group='*' name='hibernate' />
    </dependency>
    <dependency group='org.hibernate' name='hibernate-ehcache' version='3.3.1.GA' conf='runtime' transitive='true'>
      <excludes group='*' name='ehcache' />
    </dependency>
    <dependency group='asm' name='asm' version='2.2.3' conf='build' transitive='true' />
    <dependency group='junit' name='junit' version='4.7' conf='build' transitive='true' />
    <dependency group='org.mortbay.jetty' name='jetty' version='6.1.21' conf='test' transitive='true' />
    <dependency group='org.spockframework' name='spock-core' version='0.3-SNAPSHOT' conf='build' transitive='true' />
    <dependency group='net.sourceforge.htmlunit' name='htmlunit' version='2.6' conf='test' transitive='true'>
      <excludes group='*' name='xml-apis' />
    </dependency>
  </dependencies>
  <behavior />
</plugin>